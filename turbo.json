{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["generate","^generate","^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start":{},
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/generated/**",
        "!**/.prisma/**"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/generated/**",
        "!**/.prisma/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**",".env*"]
    },
    "generate":{
       "dependsOn": ["^generate"],
       "inputs":["$TURBO_DEFAULT$",".prisma*"]
    },
    "migrate:dev":{
      "dependsOn": ["^migrate:dev"],
      "inputs": ["src/prisma/migrations/**", ".env*"],
      "outputs": ["src/prisma/migrations/**"]
    },
    "seed:db":{
      "dependsOn": ["^seed:db"],
      "outputs": []
    }
  }
}
